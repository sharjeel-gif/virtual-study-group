<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap + Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      background: #111;
      color: white;
    }
    .navbar {
      background-color: #1a1a1a;
    }
    .dropdown-menu {
      background-color: #1a1a1a;
    }
    .dropdown-menu a {
      color: white;
    }
    .dropdown-menu a:hover {
      background-color: #0ff;
      color: black;
    }
    .profile-pic {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid cyan;
    }
    #profilePanel {
  display: none;
  background: #1a1a1a;
  color: white;
  padding: 20px;
  border-bottom: 2px solid cyan;
  box-shadow: 0 2px 10px rgba(0,255,255,0.2);
}

.big-profile-pic {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 3px solid cyan;
  object-fit: cover;
  margin-bottom: 10px;
}

  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-dark bg-dark px-3">
  <span class="navbar-brand">Virtual Study Group</span>

  <!-- Profile Pic Trigger -->
  <img src="<%= user.picture || '/default-avatar.png' %>"
       id="profileToggle"
       alt="Profile"
       class="rounded-circle border border-info"
       style="width: 40px; height: 40px; cursor: pointer; object-fit: cover;">
</nav>

<!-- Hidden Profile Panel -->
<div id="profilePanel">
  <div class="profile-content">
    <img src="<%= user.picture || '/default-avatar.png' %>" class="big-profile-pic">
    <h3><%= user.name %></h3>
    <p><%= user.email %></p>
    <hr>
    <button class="btn btn-info w-100 mb-2">Edit Profile</button>
    <button class="btn btn-secondary w-100 mb-2">Settings</button>
    <button class="btn btn-primary w-100 mb-2">My Groups</button>
    <button class="btn btn-danger w-100" onclick="location.href='/logout'">Logout</button>
  </div>
</div>


</body>
</html>
